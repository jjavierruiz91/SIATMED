
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: cadetblue
    }
</style>
<script defer src="~/Scripts/APP/GymEstadio/GymEstadio.js"></script>
<h1>
    <strong>
        SECRETARIA DE RECREACIÓN Y DEPORTES
        HORARIO DE ENTRENAMIENTO GIMNASIO ESTADIO ARMANDO MAESTRE PAVAJEAU
    </strong>

</h1>


<div class="row m-0">

    <form id="FormPlanEntrenamineto" name="FormPlanEntrenamineto">

        <div class="row m-0">
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Deporte</strong></label>
                @{
                    var ListaDeporte = BIOMEDICO.Controllers.DeporteController.ListDeporte();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="DeporteGymEstadio" name="DeporteGymEstadio">
                        <option value="">Seleccionar</option>
                        @foreach (var item in ListaDeporte)
                        {
                            <option value="@item.CodDeporte">@item.NombreDeporte</option>
                        }


                    </select>
                }
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="EntrenadorGymEstadio" name="EntrenadorGymEstadio" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Telefono Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="TelefonoGymEstadio" name="TelefonoGymEstadio" />
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Categorias</strong></label>
                @{
                    var listaCategoria = BIOMEDICO.Controllers.CategoriaController.ListCategoria();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="CategoriaGymEstadio" name="CategoriaGymEstadio">
                        <option value="">Seleccionar</option>
                        @foreach (var item in listaCategoria)
                        {
                            <option value="@item.NomCategoria">@item.NomCategoria</option>
                        }


                    </select>
                }
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Hora Inicio</strong></label>
                <input type="time" style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="HoraInicioGymEstadio" name="HoraInicioGymEstadio" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Hora Final </strong></label>
                <input type="time" style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="HoraFinalGymEstadio" name="HoraFinalGymEstadio" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Fecha </strong></label>
                <input type="date" style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="FechaGymEstadio" name="FechaGymEstadio" />
            </div>

        </div>





    </form>
</div>


<div class="col-xs-4 col-sm-4 col-md-4">
    <button type="button" onclick="Createobj()" class="btn btn-block btn-outline-primary btn-rounded btn-outline mt-4" id="SaveGymEstadio">Guardar </button>
</div>


