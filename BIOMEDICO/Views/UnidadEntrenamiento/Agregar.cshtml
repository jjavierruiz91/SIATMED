
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        text-align: center;
        color: cadetblue
    }
</style>

<script defer src="~/Scripts/APP/UnidadEntrenamiento/UnidadEntrenamiento.js"></script>
<h1>
    <strong>
        SECRETARIA DE RECREACION Y DEPORTES
        ÁREA TÉCNICA METODOLOGÍCA
        ACTA  VISITA UNIDAD DE ENTRENAMIENTO
    </strong>

</h1>

<h2><strong>Datos Generales</strong>  </h2>

<div class="row m-0">

    <form id="FormPlanEntrenamineto" name="FormPlanEntrenamineto">

        <div class="row m-0">




            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="NombreEntrenador" name="NombreEntrenador" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Deporte</strong></label>
                @{
                    var ListaDeporte = BIOMEDICO.Controllers.DeporteController.ListDeporte();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="Deporte" name="Deporte">
                        <option value="">Seleccionar</option>
                        @foreach (var item in ListaDeporte)
                        {
                            <option value="@item.CodDeporte">@item.NombreDeporte</option>
                        }


                    </select>
                }
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Agrupacion </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Agrupacion" name="Agrupacion" />
            </div>
           
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Categorias</strong></label>
                @{
                    var listaCategoria = BIOMEDICO.Controllers.CategoriaController.ListCategoria();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="Categoria" name="Categoria">
                        <option value="">Seleccionar</option>
                        @foreach (var item in listaCategoria)
                        {
                            <option value="@item.IdCategoria">@item.NomCategoria</option>
                        }


                    </select>
                }
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Modalidad</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Modalidad" name="Modalidad" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Fecha Sesion </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="date" class="form-control" id="FechaSesion" name="FechaSesion" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Hora Inicio</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="time" class="form-control" id="HoraInicio" name="HoraInicio" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Hora Final</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="time" class="form-control" id="HoraFinal" name="HoraFinal" />
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Objetivos Sesion </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="ObjetivosSesion" name="ObjetivosSesion" />
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Numero Mesociclo </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="NumMesociclo" name="NumMesociclo" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Tipo Microciclo  </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="TipoMicrociclo" name="TipoMicrociclo" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Metodologo Evaluador  </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="MetodologoEvaluador" name="MetodologoEvaluador" />
            </div>
        </div>






    </form>
</div>
<br />

<br />

<br />

