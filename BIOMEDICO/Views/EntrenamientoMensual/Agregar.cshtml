
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        text-align: center;
        color: cadetblue
    }
</style>
<script defer src="~/Scripts/APP/PlanEntrenamientoMensual/PlanEntrenamiento.js"></script>
<h1>
    <strong>
        SECRETARIA DE RECREACION Y DEPORTES
        ÁREA TÉCNICA METODOLOGÍCA
        SEGUIMIENTO METODOLÓGICO MENSUAL PLAN ENTRENAMIENTO
    </strong>
    
</h1>

<h2><strong>Datos Generales</strong>  </h2>

<div class="row m-0">

    <form id="FormPlanEntrenamineto" name="FormPlanEntrenamineto">

        <div class="row m-0">

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Número Identificación</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="text" class="form-control" id="NumIdentificacionDeportista" name="NumIdentificacionDeportista" />
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Deportista</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="NombreDeportista" name="NombreDeportista" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Entrenador" name="Entrenador" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Deporte</strong></label>
                @{
                    var ListaDeporte = BIOMEDICO.Controllers.DeporteController.ListDeporte();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="Deporte" name="Deporte">
                        <option value="">Seleccionar</option>
                        @foreach (var item in ListaDeporte)
                        {
                            <option value="@item.CodDeporte">@item.NombreDeporte</option>
                        }


                    </select>
                }
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Agrupacion </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Agrupacion" name="Agrupacion" />
            </div>
          
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Categorias</strong></label>
                @{
                    var listaCategoria = BIOMEDICO.Controllers.CategoriaController.ListCategoria();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="Categoria" name="Categoria">
                        <option value="">Seleccionar</option>
                        @foreach (var item in listaCategoria)
                        {
                            <option value="@item.IdCategoria">@item.NomCategoria</option>
                        }


                    </select>
                }
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Modalidad</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Modalidad" name="Modalidad" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Mes</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Mes" name="Mes" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Año</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Año" name="Año" />
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Metodologo </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Metodologo" name="Metodologo" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Fecha Entrega Acta </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="date" class="form-control" id="FechaEntregaActa" name="FechaEntregaActa" />
            </div>


        </div>





    </form>
</div>
<br />

<br />

<br />

<div class="row m-0">
    <h1><strong>PLAN TEÓRICO</strong> </h1>
    <hr width=100% align="right" size=200 color="black">

    <br />
    <form id="FormDeportistaPadre" name="FormDeportistaPadre">

        <div class="row m-0">

            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Seguimiento Plan de Preaparación Física </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="Preparacionfisica"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Seguimiento Plan de Preaparación Técnica </strong> </label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="PreparacionTecnica"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Seguimiento Plan de Preaparación Táctica </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="PreparacionTactica"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Cumplimiento de Objetivos Parciales: </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="ObjetivosParciales"></textarea>

            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Firma Entrenador </strong></label>

                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="FirmaEntrenador" name="FirmaEntrenador" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Firma Metodologo    </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="FirmaMetodologo" name="FirmaMetodologo" />
            </div>

         

        </div>

        <br />
    </form>

</div>

<div class="col-xs-4 col-sm-4 col-md-4">
    <button type="button" onclick="Createobj()" class="btn btn-block btn-outline-primary btn-rounded btn-outline mt-4" id="SavePlanEntrenamiento">Guardar </button>
</div>


