
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: cadetblue
    }
</style>
<script defer src="~/Scripts/APP/HorarioEntrenadores/HorarioEntrenadores.js"></script>
<h1>
    <strong>
        SECRETARIA DE RECREACIÓN Y DEPORTES
        ÁREA TECNICA METODOLÓGICA
        HORARIO DE ENTRENAMIENTO ENTRENADORES SELECCIONES DEPORTIVAS
    </strong>

</h1>


<div class="row m-0">

    <form id="FormPlanEntrenamineto" name="FormPlanEntrenamineto">

        <div class="row m-0">
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Deporte</strong></label>
                @{
                    var ListaDeporte = BIOMEDICO.Controllers.DeporteController.ListDeporte();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="DeporteHorarioEntrenadores" name="DeporteHorarioEntrenadores">
                        <option value="">Seleccionar</option>
                        @foreach (var item in ListaDeporte)
                        {
                            <option value="@item.CodDeporte">@item.NombreDeporte</option>
                        }


                    </select>
                }
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="EntrenadorHorarioEntrenadores" name="EntrenadorHorarioEntrenadores" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Telefono Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="TelefonoHorarioEntrenadores" name="TelefonoHorarioEntrenadores" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Escenarios</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="EscenariosHorarioEntrenadores" name="EscenariosHorarioEntrenadores" />
            </div>


            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Hora Inicio</strong></label>
                <input type="time" style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="HoraInicioHorarioEntrenadores" name="HoraInicioHorarioEntrenadores" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Hora Final </strong></label>
                <input type="time" style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="HoraFinalHorarioEntrenadores" name="HoraFinalHorarioEntrenadores" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Fecha </strong></label>
                <input type="date" style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="FechaHorEntrenadores" name="FechaHorEntrenadores" />
            </div>

        </div>





    </form>
</div>


<div class="col-xs-4 col-sm-4 col-md-4">
    <button type="button" onclick="Createobj()" class="btn btn-block btn-outline-primary btn-rounded btn-outline mt-4" id="SaveHorarioEntrenadores">Guardar </button>
</div>

