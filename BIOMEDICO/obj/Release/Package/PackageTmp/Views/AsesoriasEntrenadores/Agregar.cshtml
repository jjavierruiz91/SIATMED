
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        text-align: center;
        color:cadetblue
    }
</style>
<script defer src="~/Scripts/APP/AsesoriasEntrenadores/AsesoriasEntrenadores.js"></script>


<h1><strong>
    SECRETARIA DE RECREACION Y DEPORTES
    ÁREA TÉCNICA METODOLOGÍCA
    ACTA ASESORIAS TÉCNICA A ENTRENADORES
</strong>
    
</h1>

<h2><strong>Datos Generales</strong>  </h2>

<div class="row m-0">

    <form id="FormPlanEntrenamineto" name="FormPlanEntrenamineto">

        <div class="row m-0">

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Número Identificación</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="text" class="form-control" id="NumIdentificacionDeportistas" name="NumIdentificacionDeportistas" />
            </div>

            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Deportista</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Deportista" name="Deportista" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Entrenador</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Entrenador" name="Entrenador" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong> Nombre Metodologo</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Metodologo" name="Metodologo" />
            </div>
          
            
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Deporte</strong></label>
                @{
                    var ListaDeporte = BIOMEDICO.Controllers.DeporteController.ListDeporte();

                    <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="Deporte" name="Deporte">
                        <option value="">Seleccionar</option>
                        @foreach (var item in ListaDeporte)
                        {
                            <option value="@item.CodDeporte">@item.NombreDeporte</option>
                        }


                    </select>
                }
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Agrupacion </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Agrupacion" name="Agrupacion" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Escenarios</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="Escenarios" name="Escenarios" />
            </div>

                       
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Fecha Asesorias</strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" type="date" class="form-control" id="FechaAsesorias" name="FechaAsesorias" />
            </div>


        </div>





    </form>
</div>
<br />

<br />

<br />

<div class="row m-0">
    <h1><strong>PLAN TEÓRICO</strong> </h1>
    <hr width=100% align="right" size=200 color="black">

    <br />
    <form id="FormDeportistaPadre" name="FormDeportistaPadre">

        <div class="row m-0">

            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Temas </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="TemasAsesorias"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Desarrollo </strong> </label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="DesarrolloAsesorias"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Conclusiones </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="ConclusionesAsesorias"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Compromisos </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="CompromisosAsesorias"></textarea>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
                <label><strong>Asistentes </strong></label>
                <textarea style="border: black; border-width: 1px; border-style: solid;" name="textarea" rows="10" cols="10" class="form-control" id="Asistentes"></textarea>

            </div>
            
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Firma Entrenador </strong></label>

                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="FirmaEntrenador" name="FirmaEntrenador" />
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4">
                <label><strong>Firma Metodologo    </strong></label>
                <input style="border: black; border-width: 1px; border-style: solid;" class="form-control" id="FirmaMetodologo" name="FirmaMetodologo" />
            </div>



        </div>

        <br />
    </form>

</div>

<div class="col-xs-4 col-sm-4 col-md-4">
    <button type="button" onclick="Createobj()" class="btn btn-block btn-outline-primary btn-rounded btn-outline mt-4" id="SaveAsesoriasEntrenamiento">Guardar </button>
</div>

